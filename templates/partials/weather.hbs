<div id="weather" class="container-fluid weather-section">
    <div class="row">
        <div class="col-10 col-md-4 half-section">
            <h2>Get Your City Temprature</h2>
            <form class="weather-form" id="form">
                <input type="text" id="inputValue" placeholder="Enter City" />
                <button id="submitBtn">get</button>
            </form>
        </div>
        <div class="col-10 col-md-4 half-section">
            <h2 id="cityText">?</h2>
            <h6 id="dateText">?</h6>
            <div id="weatherStatus" class="weather-status">
                <i class="fa fa-question"></i>
            </div>
            <h6 id="descText">?</h6>
            <h1><span id="temp">?</span> &deg;C</h1>
            <div class="minmax">
                <div>
                    <p>Min 🌡️</p>
                    <p><span id="minTemp">?</span> &deg;C</p>
                </div>
                <div>
                    <p>Max 🌡️</p>
                    <p><span id="maxTemp">?</span> &deg;C</p>
                </div>
            </div>
        </div>
    </div>
</div>