<div id="weather" class="container-fluid weather-section">
    <div class="row">
        <div class="col-10 col-md-4 half-section">
            <h4>Get Your City Temprature</h4>
            <form class="weather-form" id="form" autocomplete="off">
                <div>
                    <input type="text" id="inputValue" placeholder="Enter City" autocomplete="off" />
                    <i id="clearBtn" class="fa fa-close" title="Clear Text"></i>
                </div>
                <div id="suggestionList">
                </div>
                <button id="submitBtn" class="my-btn">get</button>
            </form>
        </div>
        <div class="col-10 col-md-4 half-section result">
            <h2 id="cityText">?</h2>
            <h6 id="dateText">?</h6>
            <hr>
            <div id="weatherStatus" class="weather-status"
                {{!-- style="background: linear-gradient(#acb6e5, #86fde8);
                            -webkit-background-clip: text;
                            -webkit-text-fill-color: transparent;" --}}
                            >
                <i class="fa fa-question"></i>
            </div>
            <h6 id="descText">?</h6>
            <hr>
            <h1><span id="temp">?</span> &deg;C</h1>
            <div class="minmax">
                <div>
                    <p>Min 🌡️</p>
                    <p><span id="minTemp">?</span> &deg;C</p>
                </div>
                <div>
                    <p>Max 🌡️</p>
                    <p><span id="maxTemp">?</span> &deg;C</p>
                </div>
            </div>
            <hr>
        </div>

        <iframe
            class="col-12 col-md-8"
            id="map"
            height="300"
            style="margin-bottom: 80px"
            loading="lazy"
            allowfullscreen
            src="https://www.google.com/maps/embed/v1/place?key=AIzaSyDD1MsjuZbXMZlGOc6SMQIDyQYRfbr9HZY&q=Mumbai">
        </iframe>

    </div>
</div>
